{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"target": "es2022",
		"module": "node16",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"noEmit": true,
		"declaration": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.spec.ts"
	],
	"types": "./src/types.ts"
}
